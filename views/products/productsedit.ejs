<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6">

            <div class="alert alert-danger" role="alert" id="info" style="display: none">
                錯誤
            </div>

            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title">修改資料</h5>

                     <!-- 改欄位 -->
                    <form name="form1" novalidate onsubmit="checkForm(); return false;">
                        <div class="form-group">
                            <label for="product_name">** product_name</label>
                            <input type="text" class="form-control" id="product_name" name="product_name"
                                   value="<%= product_name %>">
                            <small class="form-text error-msg" style="display: none"></small>
                        </div>
                        <div class="form-group">
                            <label for="price">price</label>
                            <input type="text" class="form-control" id="price" name="price"
                                   value="<%= price %>"
                                >
                        </div>
                        <div class="form-group">
                            <label for="color">color</label>
                            <input type="text" class="form-control" id="color" name="color"
                                   value="<%= color %>">
                        </div>

                        <div class="form-group">
                            <label for="size">size</label>
                            <input type="text" class="form-control" id="size" name="size"
                                   value="<%= size %>">
                        </div>

                        <div class="form-group">
                            <label for="size">photo</label>
                            <input type="text" class="form-control" id="photo" name="photo"
                                   value="<%= photo %>">
                                   <img width="330" height="220" src="http://localhost:3000/imgs/<%= JSON.parse(photo)[0] %>"  alt="">
                        </div>

                        <div class="form-group">
                            <label for="size">introduction</label>
                            <input type="text" class="form-control" id="introduction" name="introduction"
                                   value="<%= introduction %>">
                        </div>

                        <button type="submit" class="btn btn-primary">修改</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

